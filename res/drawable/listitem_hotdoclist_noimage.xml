<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/hottopnews_listview_selector"
    android:gravity="left" >

    <TextView
        android:id="@+id/itemsTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingBottom="@dimen/list_item_title_bottom"
        android:paddingLeft="10dip"
        android:paddingTop="@dimen/list_item_padding_top"
        android:singleLine="true"
        android:text="发布人"
        android:textColor="@color/list_item_title"
        android:textSize="17dip" />

    <TextView
        android:id="@+id/itemsAbstract"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemsTitle"
        android:ellipsize="end"
        android:gravity="left"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:paddingBottom="2dip"
        android:paddingLeft="10dip"
        android:text="内容"
        android:textColor="@color/list_item_abstract"
        android:textSize="14dip" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/itemsAbstract"
        android:orientation="vertical" >

        <VideoView
            android:id="@+id/videoView1"
            android:layout_width="wrap_content"
            android:layout_height="160dip"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:gravity="left"
        android:lines="1"
        android:paddingBottom="@dimen/list_item_padding_bottom"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="时间"
        android:textColor="@color/list_item_time"
        android:textSize="11dip" />

</RelativeLayout>