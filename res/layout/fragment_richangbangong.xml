<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bangonggonggaosend"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/menu_gonggao_fabu"
        android:text="发布通知公告" />

    <Button
        android:id="@+id/bangonggonggaolist"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/menu_gonggao_liebiao"
        android:text="查看公告列表" />
    <Button
        android:id="@+id/bangongxiaoxisend"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/menu_xiaoxi_fasong"
        android:text="发送消息" />

    <Button
        android:id="@+id/bangongxiaoxilist"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/menu_xiaoxi_liebiao"
        android:text="查看消息列表" />
</LinearLayout>