        </GridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置信息：" />

            <TextView
                android:id="@+id/local_place"
                android:layout_width="wrap_content"
